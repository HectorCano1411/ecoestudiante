# =============================================================================
# EcoEstudiante - Variables de Entorno
# =============================================================================
# Copiar este archivo a .env y configurar los valores
# cp .env.example .env
# =============================================================================

# Base de Datos PostgreSQL
POSTGRES_DB=ecoestudiante
POSTGRES_USER=eco
POSTGRES_PASSWORD=eco

# pgAdmin (Interfaz web para PostgreSQL)
PGADMIN_EMAIL=admin@ecoestudiante.com
PGADMIN_PASSWORD=admin123

# JWT Secret (mínimo 64 caracteres para HS512)
JWT_SECRET=YourSecretKeyShouldBeAtLeast256BitsLongForHS512AlgorithmToWorkProperlyAndSecurely

# Auth0 (opcional - dejar vacío para usar solo JWT del backend)
AUTH0_ISSUER_BASE_URL=
AUTH0_AUDIENCE=https://api.ecoestudiante.com
AUTH0_SECRET=
AUTH0_BASE_URL=http://localhost:3000
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=

# Email (opcional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# Mapbox (para mapas de movilidad)
# Obtén tu token gratuito en: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=
